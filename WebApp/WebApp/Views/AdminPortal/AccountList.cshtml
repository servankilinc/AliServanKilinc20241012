@using WebApp.ViewModels
@model VMAdminPortalAccountList
@{
    ViewData["Title"] = "Admin Portal";
}
<style>
    table thead tr th {
        text-align: center;
        vertical-align: middle;
    }

    table tbody tr td, table tbody tr th {
        text-align: center;
        vertical-align: middle;
    }
</style>

<div class="row shadow-sm p-3" style="border-radius: 1rem; border: 1px solid #e2e2e2;">
    <div class="col-12">
        <h2 class="border-bottom mb-4 pb-3" style="font-weight:700;">
            Kullanıcı Hesapları
        </h2>
    </div>
    <div class="col-12 d-flex flex-column  border-bottom mb-3">
        <form asp-controller="AdminPortal" asp-action="AccountList" method="post">
            <div class="col-12 d-flex justify-content-between align-items-end">

                <div class="mb-3">
                    <label asp-for="FilterModel.AccountNo" class="form-label" style="font-weight:700; color: #4b4b4b;">Hesap Numarası</label>
                    <input asp-for="FilterModel.AccountNo" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="FilterModel.UserId" class="form-label" style="font-weight:700; color: #4b4b4b;">Kullanıcı</label>
                    <select asp-for="FilterModel.UserId" asp-items="@Model.UserList" class="selectpicker" data-width="100%" data-live-search="true" data-size="5" data-style="btn-outline-secondary" title="Seçiniz"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="FilterModel.AccountTypeId" class="form-label" style="font-weight:700; color: #4b4b4b;">Hesap Türü</label>
                    <select asp-for="FilterModel.AccountTypeId" asp-items="@Model.AccountTypeList" class="selectpicker" data-width="100%" data-live-search="true" data-size="5" data-style="btn-outline-secondary" title="Seçiniz"></select>
                </div>
                <input asp-for="FilterModel.PageIndex" type="hidden" class="form-control">

            </div>
            <div class="d-flex justify-content-end mt-2">
                <button type="submit" class="btn btn-sm my-2" style="background-color: #13AF54; color: white;">
                    <i class="fa-solid fa-search me-2"></i> Ara
                </button>
            </div>
        </form>
    </div>
    <div class="col-12 mt-4">
        <table class="table table-striped border shadow-sm my-3">
            <thead>
                <tr>
                    <th scope="col">Hesap Numarası</th>
                    <th scope="col">Hesap Türü</th>
                    <th scope="col">Kullanıcı</th>
                    <th scope="col">Oluşturulma Tarihi</th>
                    <th scope="col">Onay Durumu</th>
                    <th scope="col">Onay Tarihi</th>
                    <th scope="col">Bakiye</th>
                    <th scope="col">Devre Dışı Bırak</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.AccountList!.Data)
                {
                    <tr>
                        <td>@account.AccountNo</td>
                        <td>@account.AccountType?.Name</td>
                        <td>@account.UserId</td>
                        <td>@account.CreatedDate.ToString("dd.MM.yyyy mm:HH")</td>
                        <td>@(account.IsVerified? Html.Raw("<span class='text-success'>Onaylı</span>") : Html.Raw("<span class='text-danger'>Red</span>"))</td>
                        <td>@account.VerificationDate.ToString("dd.MM.yyyy mm:HH")</td>
                        <td>@account.Balance</td>
                        @if (account.IsVerified)
                        {
                            <td>
                                <div class="btn btn-danger btn-sm shadow-sm" onclick="ShowAlertRejection('@(account.Id)')">
                                    Reddet
                                </div>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-12 mt-4">
        <nav class="d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item @(Model.AccountList.HasPrevious ? "" : "disabled")">
                    <button type="button" class="page-link" onclick="changePage(@(Model.AccountList.Page - 1))">Geri</button>
                </li>
                @for (int i = 0; i < Model.AccountList.PageCount; i++)
                {
                    if (Model.AccountList.Page == i)
                    {
                        <li class="page-item active" aria-current="page"><span class="page-link">@(i + 1)</span></li>
                    }
                    else
                    {
                        <li class="page-item"><a class="page-link" role="button" onclick="changePage(@i)">@(i + 1)</a></li>
                    }
                }
                <li class="page-item @(Model.AccountList.HasNext ? "" : "disabled")">
                    <button type="button" class="page-link" onclick="changePage(@(Model.AccountList.Page + 1))">İleri</button>
                </li>
            </ul>
        </nav>
    </div>
</div>

<div class="modal" tabindex="-1" id="modal-account-rejection">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body d-flex flex-column gap-2 text-center p-3">
                <i class="fa-solid fa-triangle-exclamation fa-2xl text-warning"></i>
                <b class="h5 text-secondary mt-3">Hesabı devre dışı bırakmak istiyor musunuz?</b>
                <form asp-controller="AdminPortal" asp-action="Rejection" method="post" id="account-rejection-form" class="d-flex flex-column p-2 pt-3 m-2 border-top">
                    <input name="AccountId" type="hidden" class="form-control">
                    <div class="d-flex justify-content-center my-2">
                        <button type="button" class="btn btn-secondary shadow-sm" data-bs-dismiss="modal">İptal</button>
                        <button role="button" type="submit" class="btn btn-danger shadow-sm ms-3">Reddet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        function changePage(page) {
            document.querySelector('input[name="FilterModel.PageIndex"]').value = page;
            document.querySelector('form').submit();
        }

        function ShowAlertRejection(tID) {
            if (tID != null) {
                document.querySelector('#account-rejection-form textarea[name="Description"]').value = ""
                document.querySelector('#account-rejection-form input[name="AccountId"]').value = tID
                $("#modal-account-rejection").modal("show");
            }
        }
    </script>
}